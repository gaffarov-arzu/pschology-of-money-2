    <script>
        function showTab(tabName) {
            const tabs = document.querySelectorAll('.tab-content');
            tabs.forEach(tab => tab.classList.remove('active'));

            const navTabs = document.querySelectorAll('.nav-tab');
            navTabs.forEach(tab => tab.classList.remove('active'));

            document.getElementById(tabName).classList.add('active');
            event.target.classList.add('active');
        }

        function calculateEnough() {
            const monthlyExpense = parseFloat(document.getElementById('monthlyExpense').value);
            const yearsNeeded = parseFloat(document.getElementById('yearsNeeded').value);
            const safeReturn = parseFloat(document.getElementById('safeReturn').value) / 100;
            const currentSavings = parseFloat(document.getElementById('currentSavings').value);
            const monthlySavings = parseFloat(document.getElementById('monthlySavings').value);

            if (!monthlyExpense || !yearsNeeded || !safeReturn || monthlySavings === undefined) {
                alert('LÃ¼tfen tÃ¼m alanlarÄ± doldurun!');
                return;
            }

            const annualExpense = monthlyExpense * 12;
            
            // Calculate total capital needed using withdrawal rate
            // Using 4% safe withdrawal rule inversed
            const totalNeeded = annualExpense / safeReturn;
            
            const passiveIncome = totalNeeded * safeReturn;
            
            // Calculate years to reach the goal
            const monthlyReturn = safeReturn / 12;
            const shortfall = totalNeeded - currentSavings;
            
            let yearsToEnough;
            if (shortfall <= 0) {
                yearsToEnough = 0;
            } else if (monthlySavings <= 0) {
                yearsToEnough = Infinity;
            } else {
                const months = Math.log((totalNeeded * monthlyReturn / monthlySavings) + 1) / Math.log(1 + monthlyReturn);
                yearsToEnough = months / 12;
            }

            // Display results
            document.getElementById('annualExpense').textContent = formatCurrency(annualExpense);
            document.getElementById('totalNeeded').textContent = formatCurrency(totalNeeded);
            document.getElementById('passiveIncome').textContent = formatCurrency(passiveIncome);

            let timeDisplay, message;
            if (yearsToEnough === 0) {
                timeDisplay = 'ÅÄ°MDÄ°! Tebrikler! ğŸ‰';
                message = `
                    <h3 style="color: #27ae60; margin-bottom: 15px; font-size: 1.5em;">ğŸŠ "YETER" NoktasÄ±na UlaÅŸtÄ±nÄ±z!</h3>
                    <p style="color: #2c3e50; font-size: 1.15em; line-height: 1.7;">
                        Tebrikler! Mevcut birikiminiz ${formatCurrency(currentSavings)} ile yÄ±llÄ±k 
                        ${formatCurrency(annualExpense)} giderinizi karÅŸÄ±layabilirsiniz.<br><br>
                        <strong style="color: #27ae60;">ArtÄ±k "yeter" diyebilirsiniz!</strong> 
                        Daha fazla biriktirmeye devam edebilir veya hayatÄ±nÄ±zÄ±n tadÄ±nÄ± Ã§Ä±karabilirsiniz.
                    </p>
                `;
            } else if (yearsToEnough === Infinity || isNaN(yearsToEnough)) {
                timeDisplay = 'HesaplanamÄ±yor';
                message = `
                    <h3 style="color: #e74c3c; margin-bottom: 15px;">âš ï¸ Tasarruf ArtÄ±rÄ±lmalÄ±</h3>
                    <p style="color: #2c3e50; font-size: 1.1em;">
                        Mevcut tasarruf oranÄ±yla hedefe ulaÅŸmanÄ±z Ã§ok uzun sÃ¼recek veya imkansÄ±z.<br><br>
                        <strong>Ã–neriler:</strong><br>
                        â€¢ AylÄ±k tasarruf miktarÄ±nÄ± artÄ±rÄ±n<br>
                        â€¢ Giderlerinizi azaltÄ±n<br>
                        â€¢ Gelir artÄ±rÄ±cÄ± yan iÅŸler bulun
                    </p>
                `;
            } else {
                const displayYears = Math.ceil(yearsToEnough);
                timeDisplay = `${displayYears} YÄ±l`;
                
                if (yearsToEnough <= 5) {
                    message = `
                        <h3 style="color: #27ae60; margin-bottom: 15px; font-size: 1.4em;">ğŸš€ Harika Ä°lerleme!</h3>
                        <p style="color: #2c3e50; font-size: 1.1em; line-height: 1.7;">
                            Sadece ${displayYears} yÄ±l iÃ§inde "yeter" noktanÄ±za ulaÅŸabilirsiniz!<br><br>
                            Bu sÃ¼re sonunda ${formatCurrency(totalNeeded)} sermayeniz olacak ve 
                            yÄ±lda ${formatCurrency(passiveIncome)} pasif gelir elde edeceksiniz.<br><br>
                            <strong style="color: #27ae60;">Devam edin!</strong> Hedefinize Ã§ok yakÄ±nsÄ±nÄ±z.
                        </p>
                    `;
                } else if (yearsToEnough <= 15) {
                    message = `
                        <h3 style="color: #3498db; margin-bottom: 15px; font-size: 1.4em;">âœ… Ä°yi Bir Plan</h3>
                        <p style="color: #2c3e50; font-size: 1.1em; line-height: 1.7;">
                            ${displayYears} yÄ±lda "yeter" noktanÄ±za ulaÅŸabilirsiniz.<br><br>
                            Bu sÃ¼re sonunda finansal Ã¶zgÃ¼rlÃ¼ÄŸÃ¼nÃ¼z olacak: ${formatCurrency(totalNeeded)} 
                            sermaye ve yÄ±lda ${formatCurrency(passiveIncome)} pasif gelir.<br><br>
                            <strong>HÄ±zlandÄ±rma iÃ§in:</strong><br>
                            â€¢ AylÄ±k tasarruf miktarÄ±nÄ± %20-30 artÄ±rÄ±n<br>
                            â€¢ Giderlerinizi optimize edin<br>
                            â€¢ Ek gelir kaynaklarÄ± yaratÄ±n
                        </p>
                    `;
                } else {
                    message = `
                        <h3 style="color: #f39c12; margin-bottom: 15px; font-size: 1.4em;">â° Uzun Vade</h3>
                        <p style="color: #2c3e50; font-size: 1.1em; line-height: 1.7;">
                            ${displayYears} yÄ±l makul bir sÃ¼re ama hÄ±zlandÄ±rÄ±labilir!<br><br>
                            <strong>SÃ¼reyi kÄ±saltmak iÃ§in:</strong><br>
                            â€¢ YaÅŸam giderlerinizi gÃ¶zden geÃ§irin - gerÃ§ekten bu kadar mÄ± gerekli?<br>
                            â€¢ Tasarruf oranÄ±nÄ± Ã¶nemli Ã¶lÃ§Ã¼de artÄ±rÄ±n<br>
                            â€¢ Daha yÃ¼ksek getirili (ama gÃ¼venli) yatÄ±rÄ±mlarÄ± araÅŸtÄ±rÄ±n<br>
                            â€¢ Gelir artÄ±ÅŸÄ± saÄŸlayacak becerilere yatÄ±rÄ±m yapÄ±n
                        </p>
                    `;
                }
            }

            document.getElementById('yearsToEnough').textContent = timeDisplay;
            document.getElementById('enoughMessage').innerHTML = message;
            document.getElementById('enoughResult').style.display = 'block';
            document.getElementById('enoughResult').scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        }

        function formatCurrency(amount) {
            return new Intl.NumberFormat('tr-TR', {
                style: 'currency',
                currency: 'TRY',
                minimumFractionDigits: 0,
                maximumFractionDigits: 0
            }).format(amount);
        }
